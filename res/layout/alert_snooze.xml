<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RadioGroup
        android:id="@+id/snooze_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    
	    <RadioButton
	        android:id="@+id/min5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/snooze_duration"
	        android:layout_below="@+id/snooze_duration"
	        android:text="5 minute" />
	    
	    <RadioButton
	        android:id="@+id/min10"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/min5"
	        android:layout_below="@+id/min5"
	        android:text="10 minute" />
	
	    <RadioButton
	        android:id="@+id/min15"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/min10"
	        android:layout_below="@+id/min10"
	        android:text="15 minute" />
	
	    <RadioButton
	        android:id="@+id/min20"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/min15"
	        android:layout_below="@+id/min15"
	        android:text="20 minute" />
	   
	    <RadioButton
	        android:id="@+id/min25"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/min20"
	        android:layout_below="@+id/min20"
	        android:text="25 minute" />
	    
	    <RadioButton
	        android:id="@+id/min30"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/min25"
	        android:layout_below="@+id/min25"
	        android:text="30 minute" />

    </RadioGroup>
    
    <Button
        android:id="@+id/btn_ok"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/View02"
        android:layout_below="@+id/View02"
        android:text="Ok" />

    <Button
        android:id="@+id/btn_cancel"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_ok"
        android:layout_alignBottom="@+id/btn_ok"
        android:layout_alignParentRight="true"
        android:text="Cancel" />

    <View
        android:id="@+id/View02"
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:layout_alignRight="@+id/btn_cancel"
        android:layout_below="@+id/snooze_duration"
        android:layout_marginTop="14dp"
        android:background="#48D1CC"
        android:paddingBottom="5dp" />

</RelativeLayout>